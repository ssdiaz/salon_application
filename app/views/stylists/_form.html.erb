<%= form_for @stylist do |f| %>

  <%= render partial: 'errors/error', locals: {object: @stylist} unless @stylist.errors.empty? %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %><br><br>

  <%= f.label :email %>
  <%= f.text_field :email, class: 'form-control' %><br><br>

  <%= f.label :handle %>
  <%= f.text_field :handle, class: 'form-control' %><br><br>
  
  <%= f.label :level %>
  <% (1..5).to_a.each do |number| %>
    <%= f.radio_button :level, number %> 
    <%= f.label :level, number %>
  <% end %><br><br>
  
  <%= f.label :service_ids, "Service(s)" %> 
  <%= f.collection_check_boxes :service_ids, Service.all, :id, :name %><br><br>

  <%= f.submit submit_tag %>
<% end %>